    'style.css': style_css,
    'script.js': script_js
}

# Save the files
import os

save_path = '/mnt/data/M962X_Files/'  # Directory to save the files
os.makedirs(save_path, exist_ok=True)

# Writing files to the system
for file_name, content in file_paths.items():
    with open(os.path.join(save_path, file_name), 'w', encoding='utf-8') as file:
        file.write(content)

